        <!-- ######################################################### -->
        <!-- Build plugin versions -->
        <!-- ######################################################### -->
        <plugins.compiler.version>3.0</plugins.compiler.version>
        <plugins.clean.version>2.5</plugins.clean.version>
        <plugins.deploy.version>2.7</plugins.deploy.version>
        <plugins.install.version>2.4</plugins.install.version>
        <plugins.resources.version>2.6</plugins.resources.version>
        <plugins.surefire.version>2.12.4</plugins.surefire.version>
        <plugins.build-helper.version>1.7</plugins.build-helper.version>
        <plugins.jar.version>2.4</plugins.jar.version>
        <plugins.plugin.version>3.1</plugins.plugin.version>
        <plugins.source.version>2.2.1</plugins.source.version>
        <!-- Use 2.5 instead of 2.5.1 because of http://jira.codehaus.org/browse/MCOBERTURA-151 -->
