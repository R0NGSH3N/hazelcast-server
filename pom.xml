        <plugins.rpm.version>2.1-alpha-2</plugins.rpm.version>
        <plugins.buildnumber.version>1.0</plugins.buildnumber.version>
        <plugins.license.version>1.9.0</plugins.license.version>
        <!-- ######################################################### -->
        <!-- Reporting plugin versions -->
        <!-- ######################################################### -->
        <plugins.site.version>3.1</plugins.site.version>
        <plugins.javadoc.version>2.9</plugins.javadoc.version>
        <plugins.surefire-reports.version>2.12.4</plugins.surefire-reports.version>
        <plugins.pmd.version>2.7.1</plugins.pmd.version>
        <plugins.project-info-reports.version>2.6</plugins.project-info-reports.version>
    </properties>

    <!-- =================================================== -->
    <!-- Developers section -->
    <!-- =================================================== -->

    <developers>
        <developer>
            <id>obergner</id>
            <name>Olaf Bergner</name>
            <email>olaf.bergner AT gmx.de</email>
            <roles>
                <role>Project Admin</role>
                <role>Developer</role>
            </roles>
            <timezone>0</timezone>
        </developer>
    </developers>

    <!-- =================================================== -->
    <!-- SCM section -->
    <!-- =================================================== -->

    <scm>
        <connection>scm:git:https://github.com/obergner/hazelcast-server.git</connection>
        <developerConnection>scm:git:git://github.com/obergner/hazelcast-server.git</developerConnection>
        <tag></tag>
        <url></url>
    </scm>

    <!-- =================================================== -->
    <!-- Distribution management -->
    <!-- =================================================== -->

    <distributionManagement>
        <site>
            <id>hazelcast-server.website</id>
            <url>https://github.com/obergner/hazelcast-server</url>
        </site>
    </distributionManagement>

    <dependencies>
		<!-- *************************************************************** -->
		<!-- Provided -->
		<!-- *************************************************************** -->
		<!-- *************************************************************** -->
		<!-- Compile -->
		<!-- *************************************************************** -->
        <dependency>
            <groupId>com.google.guava</groupId>
            <artifactId>guava</artifactId>
            <scope>compile</scope>
            <version>${dep.guava.version}</version>
        </dependency>
        <!-- Hazelcast -->
        <dependency>
            <groupId>com.hazelcast</groupId>
            <artifactId>hazelcast</artifactId>
            <scope>compile</scope>
            <version>${dep.hazelcast.version}</version>
        </dependency>
        <dependency>
            <groupId>com.hazelcast</groupId>
            <artifactId>hazelcast-spring</artifactId>
            <scope>compile</scope>
            <version>${dep.hazelcast.version}</version>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>${dep.slf4j.version}</version>
            <scope>compile</scope>
        </dependency>
        <!-- Spring -->
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-core</artifactId>
            <version>${dep.spring.version}</version>
            <scope>compile</scope>
            <exclusions>
                <exclusion>
                    <groupId>commons-logging</groupId>
                    <artifactId>commons-logging</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-aop</artifactId>
            <version>${dep.spring.version}</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-beans</artifactId>
            <version>${dep.spring.version}</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-context</artifactId>
            <version>${dep.spring.version}</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-expression</artifactId>
            <version>${dep.spring.version}</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-tx</artifactId>
            <version>${dep.spring.version}</version>
            <scope>compile</scope>
        </dependency>
        <!-- Yammer Metrics for gathering runtime statistics -->
        <dependency>
            <groupId>com.yammer.metrics</groupId>
            <artifactId>metrics-core</artifactId>
            <version>${dep.yammer-metrics.version}</version>
            <scope>compile</scope>
        </dependency>
        <!-- Export MBean via SNMP -->
        <dependency>
            <groupId>org.vafer</groupId>
            <artifactId>jmx2snmp</artifactId>
            <version>${dep.jmx2snmp.version}</version>
            <scope>compile</scope>
        </dependency>
		<!-- *************************************************************** -->
		<!-- Runtime -->
		<!-- *************************************************************** -->
        <!-- We use logback as our logging library of choice -->
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>jcl-over-slf4j</artifactId>
            <version>${dep.slf4j.version}</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>ch.qos.logback</groupId>
            <artifactId>logback-classic</artifactId>
            <version>${dep.logback.version}</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>ch.qos.logback</groupId>
            <artifactId>logback-core</artifactId>
            <version>${dep.logback.version}</version>
            <scope>runtime</scope>
        </dependency>
        <!-- Yammer Metrics for gathering runtime statistics -->
        <dependency>
            <groupId>com.yammer.metrics</groupId>
            <artifactId>metrics-spring</artifactId>
            <version>${dep.yammer-metrics.version}</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>com.yammer.metrics</groupId>
            <artifactId>metrics-annotation</artifactId>
            <version>${dep.yammer-metrics.version}</version>
            <scope>runtime</scope>
        </dependency>
		<!-- *************************************************************** -->
		<!-- Test -->
		<!-- *************************************************************** -->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>${dep.junit.version}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <defaultGoal>install</defaultGoal>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <filtering>true</filtering>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-clean-plugin</artifactId>
                <version>${plugins.clean.version}</version>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <version>${plugins.resources.version}</version>
            </plugin>
            <plugin>
                <groupId>com.mycila.maven-license-plugin</groupId>
                <artifactId>maven-license-plugin</artifactId>
                <version>${plugins.license.version}</version>
                <inherited>false</inherited>
                <configuration>
                    <header>${basedir}/src/main/build/apache-license-2.0.txt</header>
                    <quiet>false</quiet>
                    <strictCheck>true</strictCheck>
                    <failIfMissing>true</failIfMissing>
                    <aggregate>true</aggregate>
                    <includes>
                        <include>**/src/main/**</include>
                        <include>**/src/test/**</include>
                    </includes>
                    <excludes>
                        <exclude>target/**</exclude>
                        <exclude>LICENSE.txt</exclude>
                        <exclude>NOTICE.txt</exclude>
                        <exclude>slf4j-license.txt</exclude>
                        <exclude>README.md</exclude>
                    </excludes>
                    <useDefaultExcludes>true</useDefaultExcludes>
                    <useDefaultMapping>true</useDefaultMapping>
                    <encoding>UTF-8</encoding>
                </configuration>
                <executions>
                    <execution>
                        <id>format-license-headers</id>
                        <phase>process-sources</phase>
                        <goals>
                            <goal>format</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>check-license-headers</id>
                        <phase>verify</phase>
                        <goals>
                            <goal>check</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>${plugins.compiler.version}</version>
                <configuration>
                    <source>${compiler.source}</source>
                    <target>${compiler.target}</target>
                    <compilerVersion>${compiler.compilerVersion}
                        </compilerVersion>
                    <fork>true</fork>
                    <verbose>${compiler.verbose}</verbose>
                    <debug>${compiler.debug}</debug>
                    <showWarnings>
                        ${compiler.showWarnings}
                        </showWarnings>
                    <showDeprecation>
                        ${compiler.showDeprecation}
                        </showDeprecation>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <version>${plugins.build-helper.version}</version>
                <inherited>true</inherited>
                <executions>
                    <execution>
                        <id>parse-version</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>parse-version</goal>
                        </goals>
                        <configuration>
                            <propertyPrefix>parsedVersion</propertyPrefix>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-plugin-plugin</artifactId>
                <version>${plugins.plugin.version}</version>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>buildnumber-maven-plugin</artifactId>
                <version>${plugins.buildnumber.version}</version>
                <executions>
                    <execution>
                        <phase>validate</phase>
                        <goals>
                            <goal>create</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <doCheck>false</doCheck>
                    <doUpdate>false</doUpdate>
                    <revisionOnScmFailure>-1</revisionOnScmFailure>
                    <format>{0,time,yyyyMMddHHmmss}</format>
                    <items>
                        <item>timestamp</item>
                    </items>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
                <version>${plugins.source.version}</version>
                <executions>
                    <execution>
                        <id>create-source-jar</id>
                        <phase>package</phase>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>create-test-source-jar</id>
                        <phase>package</phase>
                        <goals>
                            <goal>test-jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>${plugins.surefire.version}</version>
                <configuration>
                    <forkMode>once</forkMode>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>${plugins.jar.version}</version>
                <configuration>
                    <archive>
                        <index>true</index>
                        <manifest>
                            <addDefaultSpecificationEntries>true</addDefaultSpecificationEntries>
                            <addDefaultImplementationEntries>true</addDefaultImplementationEntries>
                        </manifest>
                        <manifestEntries>
                            <Implementation-MajorVersion>${parsedVersion.majorVersion}</Implementation-MajorVersion>
                            <Implementation-MinorVersion>${parsedVersion.minorVersion}</Implementation-MinorVersion>
                            <Implementation-IncrementalVersion>${parsedVersion.incrementalVersion}</Implementation-IncrementalVersion>
                            <Implementation-Qualifier>${parsedVersion.qualifier}</Implementation-Qualifier>
                            <Implementation-BuildNumber>${buildNumber}</Implementation-BuildNumber>
                        </manifestEntries>
                    </archive>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>rpm-maven-plugin</artifactId>
                <version>${plugins.rpm.version}</version>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-install-plugin</artifactId>
                <version>${plugins.install.version}</version>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-deploy-plugin</artifactId>
                <version>${plugins.deploy.version}</version>
            </plugin>
            <!-- REPORTING PLUGINS -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-report-plugin</artifactId>
                <version>${plugins.surefire-reports.version}</version>
                <executions>
                    <execution>
                        <id>generate-surefire-reports</id>
                        <phase>surefire</phase>
                        <goals>
                            <goal>report-only</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>cobertura-maven-plugin</artifactId>
                <version>${plugins.cobertura.version}</version>
                <executions>
                    <execution>
                        <id>cobertura-clean</id>
                        <phase>pre-site</phase>
                        <goals>
                            <goal>clean</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>cobertura-cobertura</id>
                        <phase>site</phase>
                        <goals>
                            <goal>cobertura</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-site-plugin</artifactId>
                <version>${plugins.site.version}</version>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>rpm</id>
            <activation>
                <os>
                    <name>linux</name>
                    <arch>amd64</arch>
                    <family>unix</family>
                </os>
            </activation>

            <properties>
                <rpm.filtered.dir>${project.build.directory}/rpm-filtered</rpm.filtered.dir>
                <rpm.dist>el6</rpm.dist>
                <rpm.arch>x86_64</rpm.arch>
                <rpm.version>0.19.8</rpm.version>
                <rpm.repository>vnet</rpm.repository>
                <rpm.user>hazelcast</rpm.user>
                <rpm.group>hazelcast</rpm.group>
                <rpm.var-run.dir>/var/run/hazelcast-server</rpm.var-run.dir>
                <rpm.var-lib.dir>/var/lib/hazelcast-server</rpm.var-lib.dir>
                <rpm.var-log.dir>/var/log/hazelcast-server</rpm.var-log.dir>
                <rpm.usr-share.dir>/usr/share/hazelcast-server</rpm.usr-share.dir>
                <rpm.etc.dir>/etc/hazelcast-server</rpm.etc.dir>
                <java.min.mem>128</java.min.mem>
                <java.max.mem>512</java.max.mem>
                <java.min.perm>64</java.min.perm>
                <java.max.perm>128</java.max.perm>
            </properties>

            <build>
                <resources>
                    <resource>
                        <directory>${project.basedir}/src/main/rpm</directory>
                        <filtering>true</filtering>
                        <targetPath>${rpm.filtered.dir}</targetPath>
                    </resource>
                </resources>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-resources-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>copy-filtered-rpm-resources</id>
                                <phase>process-resources</phase>
                                <goals>
                                    <goal>resources</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>

                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>rpm-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>package-rpm</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>attached-rpm</goal>
                                </goals>
                                <configuration>
                                    <group>Network/Servers</group>
                                    <name>hazelcast-server</name>
                                    <copyright>2012, Olaf Bergner</copyright>
                                    <packager>Olaf Bergner</packager>
                                    <targetVendor>CentOS</targetVendor>
                                    <needarch>${rpm.arch}</needarch>
                                    <release>${buildNumber}.${rpm.dist}</release>
                                    <distribution>${rpm.dist}</distribution>
                                    <defaultDirmode>755</defaultDirmode>
                                    <defaultFilemode>644</defaultFilemode>
                                    <defineStatements>
                                        <defineStatement><![CDATA[workdir /var/lib/hazelcast-server]]></defineStatement>
										<!-- Do not run /usr/lib/rpm/redhat/brp-java-repack-jars: sometimes, it corrupts jars -->
                                        <defineStatement><![CDATA[__jar_repack 0]]></defineStatement>
                                    </defineStatements>
                                    <mappings>
                                        <mapping>
                                            <directory>${rpm.var-lib.dir}</directory>
                                            <filemode>755</filemode>
                                            <username>${rpm.user}</username>
                                            <groupname>${rpm.group}</groupname>
                                        </mapping>
                                        <mapping>
                                            <directory>${rpm.var-lib.dir}/deploy</directory>
                                            <filemode>755</filemode>
                                            <username>${rpm.user}</username>
                                            <groupname>${rpm.group}</groupname>
                                        </mapping>
                                        <mapping>
                                            <directory>${rpm.var-log.dir}</directory>
                                            <filemode>755</filemode>
                                            <username>${rpm.user}</username>
                                            <groupname>${rpm.group}</groupname>
                                        </mapping>
                                        <mapping>
                                            <directory>${rpm.var-run.dir}</directory>
                                            <filemode>755</filemode>
                                            <username>${rpm.user}</username>
                                            <groupname>${rpm.group}</groupname>
                                        </mapping>
                                        <mapping>
                                            <directory>${rpm.etc.dir}</directory>
                                            <directoryIncluded>true</directoryIncluded>
                                            <configuration>true</configuration>
                                            <filemode>755</filemode>
                                            <username>root</username>
                                            <groupname>root</groupname>
                                        </mapping>
                                        <mapping>
                                            <directory>${rpm.etc.dir}</directory>
                                            <directoryIncluded>false</directoryIncluded>
                                            <configuration>true</configuration>
                                            <filemode>664</filemode>
                                            <username>root</username>
                                            <groupname>root</groupname>
                                            <sources>
                                                <source>
                                                    <location>${rpm.filtered.dir}/etc</location>
                                                </source>
                                            </sources>
                                        </mapping>
                                        <mapping>
                                            <directory>/etc/init.d</directory>
                                            <directoryIncluded>false</directoryIncluded>
                                            <filemode>755</filemode>
                                            <username>root</username>
                                            <groupname>root</groupname>
                                            <sources>
                                                <source>
                                                    <location>${rpm.filtered.dir}/service</location>
                                                    <includes>
                                                        <include>hazelcast-server</include>
                                                    </includes>
                                                </source>
                                            </sources>
                                        </mapping>
                                        <mapping>
                                            <directory>${rpm.usr-share.dir}</directory>
                                            <directoryIncluded>true</directoryIncluded>
                                            <filemode>755</filemode>
                                            <username>${rpm.user}</username>
                                            <groupname>${rpm.group}</groupname>
                                        </mapping>
                                        <mapping>
                                            <directory>${rpm.usr-share.dir}</directory>
                                            <directoryIncluded>false</directoryIncluded>
                                            <filemode>664</filemode>
                                            <username>${rpm.user}</username>
                                            <groupname>${rpm.group}</groupname>
                                        </mapping>
                                        <mapping>
                                            <directory>${rpm.usr-share.dir}/conf</directory>
                                            <filemode>755</filemode>
                                            <username>${rpm.user}</username>
                                            <groupname>${rpm.group}</groupname>
                                            <sources>
                                                <softlinkSource>
                                                    <location>${rpm.etc.dir}</location>
                                                </softlinkSource>
                                            </sources>
                                        </mapping>
                                        <mapping>
                                            <directory>${rpm.usr-share.dir}/log</directory>
                                            <filemode>755</filemode>
                                            <username>${rpm.user}</username>
                                            <groupname>${rpm.group}</groupname>
                                            <sources>
                                                <softlinkSource>
                                                    <location>${rpm.var-log.dir}</location>
                                                </softlinkSource>
                                            </sources>
                                        </mapping>
                                        <mapping>
                                            <directory>${rpm.usr-share.dir}/deploy</directory>
                                            <filemode>755</filemode>
                                            <username>${rpm.user}</username>
                                            <groupname>${rpm.group}</groupname>
                                            <sources>
                                                <softlinkSource>
                                                    <location>${rpm.var-lib.dir}/deploy</location>
                                                </softlinkSource>
                                            </sources>
                                        </mapping>
                                        <mapping>
                                            <directory>${rpm.usr-share.dir}/bin</directory>
                                            <directoryIncluded>true</directoryIncluded>
                                            <filemode>755</filemode>
                                            <username>${rpm.user}</username>
                                            <groupname>${rpm.group}</groupname>
                                            <sources>
                                                <source>
                                                    <location>src/main/rpm/bin</location>
                                                    <includes>
                                                        <include>wrapper.jar</include>
                                                        <include>linux-x86-64/libwrapper-linux-x86-64.so</include>
